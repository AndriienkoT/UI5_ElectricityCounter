<mvc:View
  xmlns:mvc="sap.ui.core.mvc"
  xmlns="sap.m"
  xmlns:core="sap.ui.core"
  xmlns:tnt="sap.tnt"
  xmlns:l="sap.ui.layout"
  controllerName="UI5toLearn.controller.App" width="100%" height="100%"
  displayBlock="true">

  <tnt:ToolPage id="main" class="pageMain">
    <tnt:mainContents>
      <l:VerticalLayout class="verLayMain">
        <Text text="Учет потребления електроэнергии арендаторами" class="customHeaderText"/>
      </l:VerticalLayout>

      <l:HorizontalLayout class="horLayMain">
        <l:VerticalLayout class="verLayMain">
          <Link text="Добавить нового арендатора" press="goToCreateTenant"/>
        </l:VerticalLayout>

        <l:VerticalLayout class="verLayMain">
          <Link text="Изменить арендатора" press="goToEditTenant"/>
        </l:VerticalLayout>

        <l:VerticalLayout class="verLayMain">
          <Link text="Удалить арендатора" press="goToDeleteTenant"/>
        </l:VerticalLayout>
      </l:HorizontalLayout>

      <l:HorizontalLayout class="horLayMain">
        <l:VerticalLayout class="verLayMain">
          <Link text="Разпечатать для заполнения показателей" press="goToCreatePDF"/>
        </l:VerticalLayout>

        <l:VerticalLayout class="verLayMain">
          <Link text="Внести показатели" press="goToEnterCounterNumber"/>
        </l:VerticalLayout>

        <l:VerticalLayout class="verLayMain">
          <Link text="Накопительная ведомость за выбранный период" press="goToFundedSheet" />
        </l:VerticalLayout>
      </l:HorizontalLayout>


    </tnt:mainContents>
  </tnt:ToolPage>

</mvc:View>
