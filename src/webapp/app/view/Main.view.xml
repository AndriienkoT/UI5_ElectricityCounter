<mvc:View
  xmlns:mvc="sap.ui.core.mvc"
  xmlns:core="sap.ui.core"
  xmlns="sap.m"
  xmlns:tnt="sap.tnt"
  xmlns:control="UI5toLearn.control"
  xmlns:html="http://www.w3.org/1999/xhtml"
  controllerName="UI5toLearn.controller.App" width="100%" height="100%"
  displayBlock="true">

  <tnt:ToolPage id="main">
    <tnt:header>
      <tnt:ToolHeader>
        <Button id="menuButton" icon="sap-icon://menu2" type="Transparent" press="onMenuButtonPress"/>
        <ToolbarSpacer />
        <Text text="Hi, {Model>/login}"/>
      </tnt:ToolHeader>
    </tnt:header>

    <tnt:sideContent>
      <tnt:SideNavigation expanded="true" itemSelect="onLogoutPress">
        <tnt:NavigationList items="{path: 'Model>/navigation'}">
          <tnt:NavigationListItem icon="{path: 'Model>icon'}"
                                  text="{path: 'Model>title'}"
                                  enabled="true">
          </tnt:NavigationListItem>
        </tnt:NavigationList>
      </tnt:SideNavigation>
    </tnt:sideContent>
  </tnt:ToolPage>

</mvc:View>
