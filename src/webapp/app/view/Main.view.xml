<mvc:View
  xmlns:mvc="sap.ui.core.mvc"
  xmlns="sap.m"
  xmlns:core="sap.ui.core"
  xmlns:tnt="sap.tnt"
  xmlns:l="sap.ui.layout"
  controllerName="UI5toLearn.controller.App" width="100%" height="100%"
  displayBlock="true">

  <tnt:ToolPage id="main" class="pageMain">
    <tnt:mainContents>
      <l:VerticalLayout class="verLayMain">
        <Text text="{i18n>mainPageTitle}" class="customHeaderText"/>
      </l:VerticalLayout>

      <l:HorizontalLayout class="horLayMain">
        <l:VerticalLayout class="verLayMain">
          <Link id="createTenantLink" text="{i18n>mainPageLink1}" press="goToCreateTenant"/>
        </l:VerticalLayout>

        <l:VerticalLayout class="verLayMain">
          <Link id="editTenantLink" text="{i18n>mainPageLink2}" press="goToEditTenant"/>
        </l:VerticalLayout>

        <l:VerticalLayout class="verLayMain">
          <Link id="deleteTenantLink" text="{i18n>mainPageLink3}" press="goToDeleteTenant"/>
        </l:VerticalLayout>
      </l:HorizontalLayout>

      <l:HorizontalLayout class="horLayMain">
        <l:VerticalLayout class="verLayMain">
          <Link id="createPDFLink" text="{i18n>mainPageLink4}" press="goToCreatePDF"/>
        </l:VerticalLayout>

        <l:VerticalLayout class="verLayMain">
          <Link id="enterCounterNumberLink" text="{i18n>mainPageLink5}" press="goToEnterCounterNumber"/>
        </l:VerticalLayout>

        <l:VerticalLayout class="verLayMain">
          <Link id="fundedSheetLink" text="{i18n>mainPageLink6}" press="goToFundedSheet" />
        </l:VerticalLayout>
      </l:HorizontalLayout>

      <l:HorizontalLayout class="horLayMain">
        <l:VerticalLayout class="verLayMain">
          <Link id="importDBLink" text="{i18n>mainPageLink7}" press="goToImportDB" />
        </l:VerticalLayout>
      </l:HorizontalLayout>


    </tnt:mainContents>
  </tnt:ToolPage>

</mvc:View>
