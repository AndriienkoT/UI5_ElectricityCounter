<mvc:View
  xmlns:mvc="sap.ui.core.mvc"
  xmlns="sap.m"
  xmlns:core="sap.ui.core"
  xmlns:tnt="sap.tnt"
  xmlns:l="sap.ui.layout"
  controllerName="UI5toLearn.controller.FundedSheet" width="100%" height="100%"
  displayBlock="true">

  <tnt:ToolPage id="fundedSheet" class="pageFundedSheet">
    <tnt:header>
      <tnt:ToolHeader class="customHeader">
        <Button icon="sap-icon://nav-back" type="Transparent" class="customHeaderIcon" press="onNavBackWithoutSaving">
          <layoutData>
            <OverflowToolbarLayoutData priority="NeverOverflow" />
          </layoutData>
        </Button>
        <Text text="{i18n>FundedSheetPageTitle}" class="customHeaderText" />
      </tnt:ToolHeader>
    </tnt:header>

    <tnt:mainContents>
      <ScrollContainer horizontal="true" vertical="true" height="100%">
          <l:VerticalLayout class="verLayFundedSheet">
            <l:HorizontalLayout>
              <Label text="{i18n>FundedSheetPageLabelYear}" class="customLabelFundedSheet" />
              <Input id="year" type="Number" liveChange="onInputChange" />
              <Label text="{i18n>FundedSheetPageLabelStartMonth}" class="customLabelFundedSheet" />
              <Input id="monthStart" type="Number" liveChange="onInputChange" />
              <Label text="{i18n>FundedSheetPageLabelEndMonth}" class="customLabelFundedSheet" />
              <Input id="monthEnd" type="Number" liveChange="onInputChange" />
            </l:HorizontalLayout>

            <l:HorizontalLayout class="horLayFundedSheetButtons">
              <Button id="oneTenantBtn" text="{i18n>FundedSheetPageButtonCounter}" press="onOpenCounterDialog" class="customBtnAccept" />
              <Button id="allTenantsBtn" text="{i18n>FundedSheetPageButtonAllTenants}" class="customBtnAccept" press="onTableAllTenantsShow" />
            </l:HorizontalLayout>
          </l:VerticalLayout>

          <Table id="tableFundedSheet"
                 items="{Model>/tenants}"
                 visible="false"
                 class="customTableFundedSheet">
            <columns>
              <Column width="80px"><Text text="{i18n>tenantLabel1}" class="customTableHeaderText" /> </Column>
              <Column width="80px"><Text text="{i18n>tenantLabel2}" class="customTableHeaderText"/> </Column>
              <Column width="100px"><Text text="{i18n>tenantLabel3}" class="customTableHeaderText"/> </Column>
              <Column width="100px"><Text text="{i18n>tenantLabel4}" class="customTableHeaderText"/> </Column>
              <Column width="100px"><Text text="{i18n>tenantLabel5}" class="customTableHeaderText"/> </Column>
              <Column width="110px"><Text text="{i18n>tenantLabel6}" class="customTableHeaderText"/> </Column>
            </columns>
            <items>
              <ColumnListItem>
                <cells>
                  <Text text="{Model>housing}" />
                  <Text text="{Model>floor}" />
                  <Text text="{Model>room}" />
                  <Text text="{Model>name}" />
                  <Text text="{Model>counter}" />
                  <Text text="{Model>coefficient}" />
                </cells>
              </ColumnListItem>
            </items>
          </Table>
      </ScrollContainer>
    </tnt:mainContents>
  </tnt:ToolPage>

</mvc:View>
