<mvc:View
  xmlns:mvc="sap.ui.core.mvc"
  xmlns="sap.m"
  xmlns:core="sap.ui.core"
  xmlns:tnt="sap.tnt"
  xmlns:l="sap.ui.layout"
  controllerName="UI5toLearn.controller.FundedSheet" width="100%" height="100%"
  displayBlock="true">

  <tnt:ToolPage id="fundedSheet" class="pageFundedSheet">
    <tnt:header>
      <tnt:ToolHeader class="customHeader">
        <Button icon="sap-icon://nav-back" type="Transparent" class="customHeaderIcon" press="onNavBackWithoutSaving">
          <layoutData>
            <OverflowToolbarLayoutData priority="NeverOverflow" />
          </layoutData>
        </Button>
        <Text text="Накопительная ведомость за:" class="customHeaderText" />
      </tnt:ToolHeader>
    </tnt:header>

    <tnt:mainContents>
      <ScrollContainer horizontal="true" vertical="true" height="100%">
          <l:VerticalLayout class="verLayFundedSheet">
            <l:HorizontalLayout>
              <Label text="Год:" class="customLabelFundedSheet" />
              <Input id="year" type="Number" liveChange="onInputChange" />
              <Label text="Месяц с:" class="customLabelFundedSheet" />
              <Input id="monthStart" type="Number" liveChange="onInputChange" />
              <Label text="по:" class="customLabelFundedSheet" />
              <Input id="monthEnd" type="Number" liveChange="onInputChange" />
            </l:HorizontalLayout>

            <l:HorizontalLayout class="horLayFundedSheetButtons">
              <Button id="oneTenantBtn" text="По арендатору: " press="onOpenTenantDialog" class="customBtnAccept" />
              <Button id="allTenantsBtn" text="По всем арендаторам" class="customBtnAccept" press="onTableAllTenantsShow" />
            </l:HorizontalLayout>
          </l:VerticalLayout>

          <Table id="tableFundedSheet"
                 items="{Model>/tenants}"
                 visible="false"
                 class="customTableEnterCounterNumber">
            <columns>
              <Column width="80px"><Text text="Корпус" class="customTableHeaderText" /> </Column>
              <Column width="80px"><Text text="Этаж" class="customTableHeaderText"/> </Column>
              <Column width="100px"><Text text="Помещение" class="customTableHeaderText"/> </Column>
              <Column width="100px"><Text text="Название арендатора" class="customTableHeaderText"/> </Column>
              <Column width="100px"><Text text="Номер счетчика" class="customTableHeaderText"/> </Column>
            </columns>
            <items>
              <ColumnListItem>
                <cells>
                  <Text text="{Model>housing}" />
                  <Text text="{Model>floor}" />
                  <Text text="{Model>room}" />
                  <Text text="{Model>name}" />
                  <Text text="{Model>counter}" />
                </cells>
              </ColumnListItem>
            </items>
          </Table>

      </ScrollContainer>
    </tnt:mainContents>
  </tnt:ToolPage>

</mvc:View>
