<mvc:View
  xmlns:mvc="sap.ui.core.mvc"
  xmlns="sap.m"
  xmlns:core="sap.ui.core"
  xmlns:tnt="sap.tnt"
  xmlns:l="sap.ui.layout"
  controllerName="UI5toLearn.controller.EditTenant" width="100%" height="100%"
  displayBlock="true">

  <tnt:ToolPage id="editTenant" class="pageStandard">
    <tnt:header>
      <tnt:ToolHeader class="customHeader">
        <Button icon="sap-icon://nav-back" type="Transparent" class="customHeaderIcon" press="onNavBackWithoutSaving">
          <layoutData>
            <OverflowToolbarLayoutData priority="NeverOverflow" />
          </layoutData>
        </Button>
        <Text text="{i18n>editTenantPageTitle}" class="customHeaderText" />
      </tnt:ToolHeader>
    </tnt:header>

    <tnt:mainContents>

      <l:VerticalLayout class="verLayStandard">
        <l:HorizontalLayout>
          <Label text="{i18n>tenantLabel3}"/>
          <Input id="room" value="{/tenants/room}"/>
        </l:HorizontalLayout>
      </l:VerticalLayout>

      <l:VerticalLayout class="verLayStandard">
        <l:HorizontalLayout>
          <Label text="{i18n>tenantLabel4}"/>
          <Input id="name" value="{/tenants/name}"/>
        </l:HorizontalLayout>
      </l:VerticalLayout>

      <l:VerticalLayout class="verLayStandard">
        <l:HorizontalLayout>
          <Label text="{i18n>tenantLabel5}"/>
          <Input id="counter" value="{/tenants/counter}"/>
        </l:HorizontalLayout>
      </l:VerticalLayout>

      <l:VerticalLayout class="verLayStandard">
        <l:HorizontalLayout>
          <Label text="{i18n>tenantLabel6}"/>
          <Input id="coefficient" value="{/tenants/coefficient}"/>
        </l:HorizontalLayout>
      </l:VerticalLayout>

      <l:VerticalLayout class="verLayStandardBtn">
        <Button text="{i18n>editTenantPageButton}" press="onEditTenant" class="customBtnAccept"/>
      </l:VerticalLayout>

    </tnt:mainContents>
  </tnt:ToolPage>

</mvc:View>
