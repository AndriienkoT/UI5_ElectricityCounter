<mvc:View
  xmlns:mvc="sap.ui.core.mvc"
  xmlns="sap.m"
  xmlns:core="sap.ui.core"
  xmlns:tnt="sap.tnt"
  xmlns:l="sap.ui.layout"
  controllerName="UI5toLearn.controller.EditTenant" width="100%" height="100%"
  displayBlock="true">

  <tnt:ToolPage id="editTenant" class="pageStandard">
    <tnt:header>
      <tnt:ToolHeader class="customHeader">
        <Button icon="sap-icon://nav-back" type="Transparent" class="customHeaderIcon" press="onNavBackWithoutSaving">
          <layoutData>
            <OverflowToolbarLayoutData priority="NeverOverflow" />
          </layoutData>
        </Button>
        <Text text="{i18n>editTenantPageTitle}" class="customHeaderText" />
      </tnt:ToolHeader>
    </tnt:header>

    <tnt:mainContents>

      <l:VerticalLayout class="verLayStandard">
        <l:HorizontalLayout>
          <Label text="{i18n>tenantLabel3}"/>
          <ComboBox
            id="room"
            placeholder="{i18n>editTenantPageRoomPlaceholder}"
            showSecondaryValues= "true"
            selectionChange="onItemSelected"
            items="{
							path: 'Model>/tenants',
							sorter: { path: 'room' }
						}">
            <core:ListItem key="{Model>room}" text="{Model>room}" />
          </ComboBox>
        </l:HorizontalLayout>
      </l:VerticalLayout>

      <l:VerticalLayout class="verLayStandard">
        <l:HorizontalLayout>
          <Label text="{i18n>tenantLabel4}"/>
          <ComboBox
            id="name"
            placeholder="{i18n>editTenantPageNamePlaceholder}"
            showSecondaryValues= "true"
            selectionChange="onItemSelected"
            items="{
							path: 'Model>/tenants',
							sorter: { path: 'name' }
						}">
            <core:ListItem key="{Model>name}" text="{Model>name}" />
          </ComboBox>
        </l:HorizontalLayout>
      </l:VerticalLayout>

      <l:VerticalLayout class="verLayStandard">
        <l:HorizontalLayout>
          <Label text="{i18n>tenantLabel5}"/>
          <ComboBox
            id="counter"
            placeholder="{i18n>editTenantPageCounterPlaceholder}"
            showSecondaryValues= "true"
            items="{
							path: 'Model>/tenants',
							sorter: { path: 'counter' }
						}">
            <core:ListItem key="{Model>counter}" text="{Model>counter}" />
          </ComboBox>
        </l:HorizontalLayout>
      </l:VerticalLayout>

      <l:VerticalLayout class="verLayStandard">
        <l:HorizontalLayout>
          <Label text="{i18n>tenantLabel6}"/>
          <Input id="coefficient" value="{/tenants/coefficient}"/>
        </l:HorizontalLayout>
      </l:VerticalLayout>

      <l:VerticalLayout class="verLayStandardBtn">
        <Button text="{i18n>editTenantPageButton}" press="onEditTenant" class="customBtnAccept"/>
      </l:VerticalLayout>

    </tnt:mainContents>
  </tnt:ToolPage>

</mvc:View>
