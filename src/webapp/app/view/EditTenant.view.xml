<mvc:View
  xmlns:mvc="sap.ui.core.mvc"
  xmlns="sap.m"
  xmlns:core="sap.ui.core"
  xmlns:tnt="sap.tnt"
  xmlns:l="sap.ui.layout"
  controllerName="UI5toLearn.controller.EditTenant" width="100%" height="100%"
  displayBlock="true">

  <tnt:ToolPage id="editTenant" class="pageCreateTenant">
    <tnt:header>
      <tnt:ToolHeader class="customHeader">
        <Button icon="sap-icon://nav-back" type="Transparent" class="customHeaderIcon" press="onNavBackWithoutSaving">
          <layoutData>
            <OverflowToolbarLayoutData priority="NeverOverflow" />
          </layoutData>
        </Button>
        <Text text="Изменить арендатора" class="customHeaderText" />
      </tnt:ToolHeader>
    </tnt:header>

    <tnt:mainContents>

      <l:VerticalLayout class="verLayCreateTenant">
        <l:HorizontalLayout>
          <Label text="Корпус"/>
          <Input id="housing" value="{/tenants/housing}"/>
        </l:HorizontalLayout>
      </l:VerticalLayout>

      <l:VerticalLayout class="verLayCreateTenant">
        <l:HorizontalLayout>
          <Label text="Этаж"/>
          <Input id="floor" value="{/tenants/floor}"/>
        </l:HorizontalLayout>
      </l:VerticalLayout>

      <l:VerticalLayout class="verLayCreateTenant">
        <l:HorizontalLayout>
          <Label text="Помещение"/>
          <Input id="room" value="{/tenants/room}"/>
        </l:HorizontalLayout>
      </l:VerticalLayout>

      <l:VerticalLayout class="verLayCreateTenant">
        <l:HorizontalLayout>
          <Label text="Название арендатора"/>
          <Input id="name" value="{/tenants/name}"/>
        </l:HorizontalLayout>
      </l:VerticalLayout>

      <l:VerticalLayout class="verLayCreateTenant">
        <l:HorizontalLayout>
          <Label text="Номер счетчика"/>
          <Input id="counter" value="{/tenants/counter}"/>
        </l:HorizontalLayout>
      </l:VerticalLayout>

      <l:VerticalLayout class="verLayCreateTenantBtn">
        <Button text="Изменить" press="onEditTenant" class="customBtnAccept"/>
      </l:VerticalLayout>

    </tnt:mainContents>
  </tnt:ToolPage>

</mvc:View>
